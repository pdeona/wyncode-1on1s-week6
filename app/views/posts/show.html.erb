<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h3>Comments:</h3>

<% @comments.each do |comment| %>
  <%= render 'comments/comment', comment: comment %>
<% end %>

<%= render 'comments/form' %>
